{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint:latest",
        "tslint-config-prettier"
    ],
    "jsRules": {},
    "rules": {
        "object-literal-sort-keys": false,
        "indent": [true, "spaces", 2],
        "space-within-parens": false,
        "import-spacing": true,
        "prettier": true
    },
    "rulesDirectory": ["tslint-plugin-prettier"]
}
